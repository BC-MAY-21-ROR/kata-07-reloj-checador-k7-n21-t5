

  <head>
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
  </head>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="<%= crud_path %>">Employees</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="<%= reports_path %>">Reports</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class ="container col-8 table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">Day</th>
          <th scope="col">Atendance</th>
        </tr>
      </thead>
      <tbody>
        <% @atendance.each do |a| %>
          <tr>
            <th scope="row"><%= a[0] %></th>
            <td><%= a[1] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <div class ="container col-9">
        <div class ="d-flex">
          <div class ="container-check mr-auto p-2">
          <h5 >Average check in time: <span class="badge bg-secondary"><%= @checkin_avg %></span></h5>
          <h5 >Average check out time: <span class="badge bg-secondary"><%= @checkout_avg %></span></h5>
          </div> 
          <!-- Button trigger modal -->
          <div class ="container-report p-2">
          <button type="button" class="btn btn-danger btn-report" data-toggle="modal" data-target="#exampleModal">
            Absence report
          </button>
          </div>
        </div> 

          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title text-dark" id="exampleModalLabel">Employee absence</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <% @absences.each do |a| %>
                    <p class="text-danger"><span>Name: </span><%= a.name %> <span>PN: </span><%= a.privateNumber %></p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div> 