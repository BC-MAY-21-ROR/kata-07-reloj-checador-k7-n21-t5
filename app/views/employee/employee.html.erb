<html>
	<head>
	</head>
	<body>
		<div class ="container">
			<div class ="row justify-content-end">
				<div class ="col-1">
					<form action="admin" method=get>
						<button type="submit" class="btn btn-primary">Admin</button>
					</form>
				</div>
			</div>
		</div>
	<div class="container ">
		<div class ="row align-items-center d-flex">
			<div class ="col-6">
			<form method="post" action="check">
				<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
				<div class="form-group">
					<label for="exampleInputEmail1">Email address</label>
					<input type="text" class="form-control" id="privateNumber" name="privateNumber" placeholder="Private number">
				</div>
				<button type="submit" id= "checkin" name="checkin" class="btn btn-success check_in">Check In</button>
				<button type="submit" id ="checkout" name ="checkout" class="btn btn-danger check_out">Check Out</button>
			</form>
			<p class="text-success"id="notice"><%= notice %></p>
			<p class="text-danger"id="alert"><%= alert %></p>
		</div>
		<div class ="col-6 align-self-center">
			<div class="container container-employee">
				<div class="clock">
					<div id="date" class="date box"></div>
					<div class="clock-face">
						<div class="marker twelve"></div>
						<div class="marker three"></div>
						<div class="marker six"></div>
						<div class="marker nine"></div>
						<div id="minute-hand" class="hand minute-hand"></div>
						<div id="hour-hand" class="hand hour-hand"></div>
						<div id="second-hand" class="hand second-hand"></div>
						<div id="centre" class="centre"></div>
						<div id="digital-time" class="digital-time box"></div>
					</div>
					</div>
					</div>
				</div>
			</div>
		</div>
		<%= javascript_pack_tag 'employee' %>
	</body>
</html>


