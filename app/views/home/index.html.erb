	<html>
		<body>
			<div class ="container">
				<div class="login-container">
					<div class="d-flex justify-content-center h-100">
						<div class="card">
							<div class="card-header">
								<h3>Sign In</h3>
							</div>
							<div class="card-body">
								<form action="admin" accept-charset="UTF-8" method="POST">
									<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
									<div class="input-group form-group">
										<div class="input-group-prepend">
											<span class="input-group-text"><i class="fas fa-user"></i></span>
										</div>
										<input type="text" name ="user" id ="user"class="form-control" placeholder="username">
									</div>
									<div class="input-group form-group">
										<div class="input-group-prepend">
											<span class="input-group-text"><i class="fas fa-key"></i></span>
										</div>
										<input type="password" name="password" id="password" class="form-control" placeholder="password">
									</div>
									<div class="form-group">
										<input type="submit" value="Log in" class="btn btn-light float-right login_btn">
									</div>
								</form>
								<p class="text-danger"id="notice"><%= notice %></p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</body>
	</html>
